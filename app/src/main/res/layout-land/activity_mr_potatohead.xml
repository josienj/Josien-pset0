<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.josien.mrpotatohead.mrPotatohead"
    android:gravity="center|top">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/body"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/body"
        android:visibility="visible"
        android:contentDescription="@null"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/arms"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/arms"
        android:visibility="invisible"
        android:clickable="true"
        android:contentDescription="@null"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ears"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/ears"
        android:visibility="invisible"
        android:clickable="true"
        android:contentDescription="@null"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/eyebrows"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/eyebrows"
        android:visibility="invisible"
        android:contentDescription="@null"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/eyes"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/eyes"
        android:visibility="invisible"
        android:contentDescription="@null"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/glasses"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/glasses"
        android:visibility="invisible"
        android:contentDescription="@null"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/hat"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/hat"
        android:visibility="invisible"
        android:contentDescription="@null"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mouth"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/mouth"
        android:visibility="invisible"
        android:contentDescription="@null"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mustache"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/mustache"
        android:visibility="invisible"
        android:contentDescription="@null"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nose"
        android:src = "@drawable/nose"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:contentDescription="@null"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/shoes"
        android:src = "@drawable/shoes"
        android:visibility="invisible"
        android:contentDescription="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <GridLayout
        tools:targetApi="14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:clickable="false"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectitem"
            android:text="Ears"
            android:id="@+id/ears_show"
            android:layout_row="0"
            android:layout_column="2" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectitem"
            android:text="Mouth"
            android:layout_row="2"
            android:layout_column="1"
            android:id="@+id/mouth_show"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arms"
            android:id="@+id/arms_show"
            android:clickable="true"
            android:onClick="selectitem"
            android:layout_row="2"
            android:layout_column="2" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectitem"
            android:text="Mustache"
            android:layout_row="3"
            android:layout_column="1"
            android:id="@+id/mustache_show"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectitem"
            android:text="Eyebrows"
            android:id="@+id/eyebrows_show"
            android:layout_row="3"
            android:layout_column="2" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectitem"
            android:text="Nose"
            android:layout_row="4"
            android:layout_column="1"
            android:id="@+id/nose_show"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectitem"
            android:text="Hat"
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/hat_show"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectitem"
            android:text="Eyes"
            android:id="@+id/eyes_show"
            android:layout_row="4"
            android:layout_column="2" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectitem"
            android:text="Shoes"
            android:layout_row="5"
            android:layout_column="1"
            android:id="@+id/shoes_show" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectitem"
            android:text="Glasses"
            android:id="@+id/glasses_show" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="On the left side, you can click the things you like to see on mr.Potatohead"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/gridLayout"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="mr. Potato Head"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
