<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.josien.mrpotatohead.mrPotatohead"
    android:gravity="center|top">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:id="@+id/body"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/body"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:id="@+id/arms"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/arms"
        android:visibility="invisible"
        android:clickable="true" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:id="@+id/ears"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/ears"
        android:visibility="invisible"
        android:clickable="true" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:id="@+id/eyebrows"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/eyebrows"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:id="@+id/eyes"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/eyes"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:id="@+id/glasses"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/glasses"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:id="@+id/hat"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/hat"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:id="@+id/mouth"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/mouth"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:id="@+id/mustache"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src = "@drawable/mustache"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:id="@+id/nose"
        android:src = "@drawable/nose"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:id="@+id/shoes"
        android:src = "@drawable/shoes"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>

    <GridLayout
        tools:targetApi="14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="false"
        android:clickable="false">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arms"
        android:layout_row="0"
        android:layout_column="0"
        android:id="@+id/arms_show"
        android:clickable="true"
        android:onClick="selectitem"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:onClick="selectitem"
        android:text="Ears"
        android:layout_row="2"
        android:layout_column="0"
        android:id="@+id/ears_show" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectitem"
        android:text="Mouth"
        android:layout_row="2"
        android:layout_column="1"
        android:id="@+id/mouth_show"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectitem"
        android:text="Eyebrows"
        android:layout_row="3"
        android:layout_column="0"
        android:id="@+id/eyebrows_show" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectitem"
        android:text="Mustache"
        android:layout_row="3"
        android:layout_column="1"
        android:id="@+id/mustache_show"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectitem"
        android:text="Eyes"
        android:layout_row="4"
        android:layout_column="0"
        android:id="@+id/eyes_show"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectitem"
        android:text="Nose"
        android:layout_row="4"
        android:layout_column="1"
        android:id="@+id/nose_show"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectitem"
        android:text="Glasses"
        android:layout_row="5"
        android:layout_column="0"
        android:id="@+id/glasses_show"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectitem"
        android:text="Hat"
        android:layout_row="0"
        android:layout_column="1"
        android:id="@+id/hat_show"
        android:clickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectitem"
        android:text="Shoes"
        android:layout_row="5"
        android:layout_column="1"
        android:id="@+id/shoes_show" />
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="mr. Potato Head"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout" />

</RelativeLayout>
